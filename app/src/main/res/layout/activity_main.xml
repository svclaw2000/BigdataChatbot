<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:id="@+id/recordingButton"
            android:layout_width="67dp"
            android:layout_height="50dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="208dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@android:drawable/ic_notification_overlay" />

    <TextView
            android:id="@+id/sttTextView"
            android:layout_width="211dp"
            android:layout_height="81dp"
            android:background="@drawable/rectangle_draw_back"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/announcer_idle"
            app:layout_constraintBottom_toTopOf="@+id/recordingButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/announcer" />

    <view class="ant.swcapp.MainActivity$Announcer"
            android:id="@+id/announcer"
            android:layout_width="227dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/talkBallon"
            app:srcCompat="@drawable/announcer_idle1"/>

    <ImageView
            android:id="@+id/talkBallon"
            android:layout_width="298dp"
            android:layout_height="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/talk_ballon" />

    <TextView
            android:id="@+id/announcerTextView"
            android:layout_width="153dp"
            android:layout_height="82dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/announcer_hello"
            app:layout_constraintBottom_toBottomOf="@+id/talkBallon"
            app:layout_constraintEnd_toEndOf="@+id/talkBallon"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/talkBallon"
            app:layout_constraintTop_toTopOf="@+id/talkBallon"
            app:layout_constraintVertical_bias="0.4" />

</android.support.constraint.ConstraintLayout>